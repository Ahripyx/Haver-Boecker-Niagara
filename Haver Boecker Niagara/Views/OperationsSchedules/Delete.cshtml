@model Haver_Boecker_Niagara.Models.OperationsSchedule

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Operations Schedule</h1>

<h3>Are you sure you want to delete this schedule for order number @Model.SalesOrder.OrderNumber?</h3>
<div>
    <h4>Operations Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.OrderNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
    </dl>

    <form method="post" asp-action="DeleteConfirmed" asp-route-orderNumber="@Model.SalesOrder.OrderNumber">
        <button type="submit" class="btn btn-danger">Yes, Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
