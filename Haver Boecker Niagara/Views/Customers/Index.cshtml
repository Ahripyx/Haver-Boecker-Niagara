@model IEnumerable<Haver_Boecker_Niagara.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<div class="main-container">

    <h1>Customers</h1>


    <form asp-action="Index" method="get">
        <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
        <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
        <div class="form-horizontal">
            <div class="collapse  @ViewData["ShowFilter"]" id="collapseFilter">
                <div class="card card-body">
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label class="control-label">Search Customer Name:</label>
                            @Html.TextBox("SearchName", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-3">
                            <label class="control-label">Search Contact</label>
                            @Html.TextBox("SearchContact", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-3">
                            <label class="control-label">Search Phone</label>
                            @Html.TextBox("SearchPhone", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-3">
                            <label class="control-label">Search Email</label>
                            @Html.TextBox("SearchEmail", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-2 align-self-end">
                            <input type="submit" name="actionButton" value="Filter"
                                   class="btn btn-outline-primary" />
                            <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        @* search, create btn *@
        <div class="d-flex justify-content-between align-items-center mb-3">
            <button class="search-btn btn @ViewData["Filtering"]" type="button" data-bs-toggle="collapse" id="filterToggle"
                    data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                Search @ViewData["numberFilters"]
            </button>
            <a asp-action="Create" class="btn create-btn">Create New</a>
        </div>
            
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <button type="submit" name="actionButton" value="Name" class="btn btn-toolbar"
                                    formaction="@Url.Action("Index", new { sortField = "Name", sortDirection = (ViewData["SortField"] as string == "Name" && ViewData["SortDirection"] as string == "asc") ? "desc" : "asc" })">
                                @Html.DisplayNameFor(model => model.Name)
                            </button>
                        </th>
                        <th>
                            <button type="submit" name="actionButton" value="ContactPerson" class="btn btn-toolbar"
                                    formaction="@Url.Action("Index", new { sortField = "ContactPerson", sortDirection = (ViewData["SortField"] as string == "ContactPerson" && ViewData["SortDirection"] as string == "asc") ? "desc" : "asc" })">
                                @Html.DisplayNameFor(model => model.ContactPerson)
                            </button>
                        </th>
                        <th>
                            <button type="submit" name="actionButton" value="PhoneNumber" class="btn btn-toolbar"
                                    formaction="@Url.Action("Index", new { sortField = "PhoneNumber", sortDirection = (ViewData["SortField"] as string == "PhoneNumber" && ViewData["SortDirection"] as string == "asc") ? "desc" : "asc" })">
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </button>
                        </th>
                        <th>
                            <button type="submit" name="actionButton" value="Email" class="btn btn-toolbar"
                                    formaction="@Url.Action("Index", new { sortField = "Email", sortDirection = (ViewData["SortField"] as string == "Email" && ViewData["SortDirection"] as string == "asc") ? "desc" : "asc" })">
                                @Html.DisplayNameFor(model => model.Email)
                            </button>
                        </th>
                        <th>
                            <button type="submit" name="actionButton" value="Address" class="btn btn-toolbar"
                                    formaction="@Url.Action("Index", new { sortField = "Address", sortDirection = (ViewData["SortField"] as string == "Address" && ViewData["SortDirection"] as string == "asc") ? "desc" : "asc" })">
                                @Html.DisplayNameFor(model => model.Address)
                            </button>
                        </th>
                        <th>
                            <button type="submit" name="actionButton" value="City" class="btn btn-toolbar"
                                    formaction="@Url.Action("Index", new { sortField = "City", sortDirection = (ViewData["SortField"] as string == "City" && ViewData["SortDirection"] as string == "asc") ? "desc" : "asc" })">
                                @Html.DisplayNameFor(model => model.City)
                            </button>
                        </th>
                        <th>
                            <button type="submit" name="actionButton" value="Country" class="btn btn-toolbar"
                                    formaction="@Url.Action("Index", new { sortField = "Country", sortDirection = (ViewData["SortField"] as string == "Country" && ViewData["SortDirection"] as string == "asc") ? "desc" : "asc" })">
                                @Html.DisplayNameFor(model => model.Country)
                            </button>
                        </th>
                        <th>
                            <button type="submit" name="actionButton" value="PostalCode" class="btn btn-toolbar"
                                    formaction="@Url.Action("Index", new { sortField = "PostalCode", sortDirection = (ViewData["SortField"] as string == "PostalCode" && ViewData["SortDirection"] as string == "asc") ? "desc" : "asc" })">
                                @Html.DisplayNameFor(model => model.PostalCode)
                            </button>
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactPerson)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostalCode)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CustomerID" class="ed-det-del-btn">Edit</a> 
                                <a asp-action="Details" asp-route-id="@item.CustomerID" class="ed-det-del-btn">Details</a> 
                                <a asp-action="Delete" asp-route-id="@item.CustomerID" class="ed-det-del-btn">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>
<partial name="_PagingNavBar" />

