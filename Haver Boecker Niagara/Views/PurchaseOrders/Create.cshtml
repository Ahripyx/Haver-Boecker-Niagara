@model Haver_Boecker_Niagara.Models.PurchaseOrder

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Purchase Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PurchaseOrderNumber" class="control-label"></label>
                <input asp-for="PurchaseOrderNumber" class="form-control" />
                <span asp-validation-for="PurchaseOrderNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PODueDate" class="control-label"></label>
                <input asp-for="PODueDate" class="form-control" type="date" />
                <span asp-validation-for="PODueDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Vendor.Name" class="control-label"></label>
                <select asp-for="VendorID" class="form-control" asp-items="ViewBag.VendorID"></select>
                <span asp-validation-for="Vendor.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OperationsID" class="control-label">Order Number</label>
                <select asp-for="OperationsID" class="form-control" asp-items="ViewBag.OperationsID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="btnCreate" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
