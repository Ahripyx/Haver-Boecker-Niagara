@model Haver_Boecker_Niagara.Models.PurchaseOrder

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Purchase Order</h4>
<hr />
<div class="row">
    <div class="p-4 shadow-sm card-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PurchaseOrderNumber" class="control-label">Purcharse Order Number <span class="required-fields">*</span></label>
                        <input asp-for="PurchaseOrderNumber" class="form-control" required />
                        <span asp-validation-for="PurchaseOrderNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PODueDate" class="control-label"></label>
                    <input asp-for="PODueDate" class="form-control" type="date" />
                    <span asp-validation-for="PODueDate" class="text-danger"></span>
                </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Vendor.Name" class="control-label"></label>
                        <select asp-for="VendorID" class="form-control" asp-items="ViewBag.VendorID"></select>
                        <span asp-validation-for="Vendor.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SalesOrderID" class="control-label">Order Number</label>
                        <select asp-for="SalesOrderID" class="form-control" asp-items="ViewBag.SalesOrderID"></select>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="button" class="btn btn-secondary" id="btnAutofill">Autofill</button>
                <a asp-action="Index" class="btn btn-primary-close">Close</a>
                <input type="submit" value="Create" class="btn btn-primary btn-primary-close" id="btnCreate"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('btnAutofill').addEventListener('click', function() {
            document.getElementById('PurchaseOrderNumber').value = 'PO-12345';
            document.getElementById('PODueDate').value = '2025-04-01';
            document.getElementById('VendorID').value = '3'; 
            document.getElementById('SalesOrderID').value = '3'; 
        });
    </script>
}
