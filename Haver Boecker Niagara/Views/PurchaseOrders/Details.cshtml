@model Haver_Boecker_Niagara.Models.PurchaseOrder

@{
    ViewData["Title"] = "Details";
}

<h1>Purchase Order Details</h1>
<hr />
<div class="p-4 shadow-sm card-container">
    <div class="row">
        <div class="col-md-6">
            <dl class="column">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PurchaseOrderNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PurchaseOrderNumber)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <dl class="column">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PODueDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PODueDateSummary)
                </dd>
            </dl>
        </div>
    </div>
    <div class="row">
            <div class="col-md-6">
                <dl class="column">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.POActualDueDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.POActualDueDateSummary)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="column">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Vendor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Vendor.Name)
                    </dd>
                </dl>
            </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <dl class="column">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SalesOrder)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SalesOrder.OrderNumber)
                </dd>
            </dl>
        </div>
    </div>
    <div class="d-flex justify-content-end gap-2 mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.PurchaseOrderID" class="btn-edit">Edit</a> 
        <a asp-action="Index" class="btn-primary-close" id="btnClose">Close</a>
    </div>
</div>
