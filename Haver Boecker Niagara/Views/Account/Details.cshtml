@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Account Details";
}

<h1>Account Details</h1>
<hr />
<div>
    <div class="p-4 shadow-sm card-container">
        <div class="row">
            <div class="col-md-6">
                <dl class="column">
					<dt class="col-sm-4">
						@Html.DisplayNameFor(model => model.UserName)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.UserName)
					</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="column">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                </dl>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn-primary-close">Close</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-edit">Edit</a>
        </div>
    </div>
</div>