@model AccountVM

@{
    ViewData["Title"] = "Create Account";
}

<h1>Create User</h1>
<hr />
<div class="p-4 shadow-sm card-container">
    <form asp-controller="Account" asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Email" class="form-label">Email <span class="required-fields">*</span></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">User Name <span class="required-fields">*</span></label>
                    <input asp-for="UserName" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Password" class="form-label">Password <span class="required-fields">*</span></label>
                <input asp-for="Password" type="password" class="form-control" pattern="^(?=.*[^a-zA-Z0-9]).{6,}$"
                title="Debe tener al menos 6 caracteres y un carácter especial." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="RoleName" class="form-label">Role <span class="required-fields">*</span></label>
            <select asp-for="RoleName" class="form-control">

                <option value="admin">Admin</option>
                <option value="sales">Sales</option>
                <option value="engineering">Engineering</option>
                <option value="procurement">Procurement</option>
                <option value="production">Production</option>
                <option value="pic">PIC</option>

            </select>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-primary-close" id="btnCreate">Create</button>
                <a asp-action="Index" class="btn btn-danger btn-primary-close">Close</a>
        </div>
    </form>
</div>
