@model Haver_Boecker_Niagara.Models.KickoffMeeting


<div class="modal fade" id="komModal" tabindex="-1" role="dialog" aria-labelledby="komModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="komModalLabel">Create Kickoff Meeting</h4>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" name="GanttID" asp-for="@Model.GanttID"/>

                        <div class="form-group">
                            <label asp-for="MeetingSummary" class="control-label"></label>
                            <textarea asp-for="@Model.MeetingSummary" class="form-control"></textarea>
                            <span asp-validation-for="MeetingSummary" class="text-danger"></span>
                        </div>
                        <p>You will be able to add milestones to this meeting on the next step.</p>

                        <div class="modal-footer mt-3">
                            <button asp-action="CreateKickoffMeeting" value="Create" id="createKOM" class="btn btn-success">Save Kickoff Meeting</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

