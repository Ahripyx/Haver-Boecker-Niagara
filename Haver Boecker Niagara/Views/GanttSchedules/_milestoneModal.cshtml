@model Haver_Boecker_Niagara.Models.Milestone

<div class="modal fade" id="milestoneModal" tabindex="-1" role="dialog" aria-labelledby="milestoneModalLabel">
    <div class="modal-dialog" role="document">
        <div class="milestone-container">
            <div class="modal-header">
                <h4 class="modal-title" id="milestoneModalLabel">Add Milestone</h4>
                <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
                    <span class="text-dark fs-3">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form>
                    <input type="hidden" id="KickOfMeetingID" name="KickOfMeetingID" value="@Model.KickOfMeetingID" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Task Name</label>
                        <select asp-for="Name" class="form-control" id="taskDropdown">
                            @{
                                int j = 0;
                                @foreach (var task in Enum.GetValues(typeof(Haver_Boecker_Niagara.Models.Task)))
                                {
                                    <option value="@j">@task</option>
                                    j++;
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group mt-2">
                        <label asp-for="Status" class="control-label">Task Status</label>
                        <select asp-for="Status" class="form-control" id="statusDropdown">
                            @foreach (var status in Enum.GetValues(typeof(Haver_Boecker_Niagara.Models.Status)))
                            {
                                <option value="@status">@status</option>
                            }

                        </select>
                    </div>
                    <div class="form-group mt-2" id="endDateContainer">
                        <label asp-for="EndDate" class="control-label">End Date</label>
                        <input type="date" asp-for="EndDate" class="form-control" id="endDate" />
                    </div>
                    <div class="modal-footer mt-3">
                        <button asp-action="CreateMilestone" class="btn btn-success">Save Milestone</button>
                        <button type="button" class="btn-secondary-close" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
