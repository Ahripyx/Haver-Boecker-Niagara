<!-- Modal-->
@model Haver_Boecker_Niagara.Models.MilestoneVM

<div class="modal fade" id="milestoneModal" tabindex="-1" role="dialog" aria-labelledby="milestoneModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="milestoneModalLabel">Create Milestone</h4>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close" />
            </div>
            <div class="modal-body d-flex w-auto">
                <form class="d-flex flex-column w-auto">
                    <div class="d-flex flex-row">
                        <div class="col-md-6">
                            <div class="form-group">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="KickOfMeetingID" />

                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <select asp-for="Name" class="form-control">
                                        @foreach (var task in Enum.GetValues(typeof(Haver_Boecker_Niagara.Models.Task)))
                                        {
                                            <option value="@task">@task</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label"></label>
                                    <select asp-for="Status" class="form-control" id="Status">
                                        @foreach (var status in Enum.GetValues(typeof(Haver_Boecker_Niagara.Models.Status)))
                                        {
                                            <option value="@status">@status</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="StartDate" class="control-label"></label>
                                    <input asp-for="StartDate" class="form-control" id="StartDate" readonly />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EndDate" class="control-label"></label>
                                    <input asp-for="EndDate" class="form-control" id="EndDate" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ActualCompletionDate" class="control-label"></label>
                                    <input asp-for="ActualCompletionDate" class="form-control" id="ActualCompletionDate" />
                                    <span asp-validation-for="ActualCompletionDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <div class="mt-2 form-group">
                            <button asp-action="CreateMilestone" value="Create" class="btn btn-primary" id="btnCreateMilestone">Create</button>
                            <button type="reset" class="btn btn-danger">Reset</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const statusSelect = document.getElementById('#Status');
            const endDateInput = document.getElementById('EndDate');
            const actualCompletionDate= document.getElementById('ActualCompletionDate');

