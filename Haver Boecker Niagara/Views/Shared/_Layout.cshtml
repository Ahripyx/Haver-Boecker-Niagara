<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Haver_Boecker_Niagara</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    @* <link rel="stylesheet" href="~/Haver_Boecker_Niagara.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm ">
            <div class="container-fluid">
                <div class="logo-container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/Logo.png" alt="Haver_Boecker_Niagara" />
                    </a>

                    <div class="d-flex align-items-center text-white" style="margin-right: 2rem;">
                        <div class="me-3">
                            <i class="bi bi-bell" style="color: white;"></i>
                        </div>
                        <div class="text-end me-3">
                            <span class="small fw-bolder">BitBusters</span><br />
                            <div class="text-start me-3">
                                <small class="text-start">Admin</small>
                            </div>
                        </div>
                        <a class="btn">
                            <i class="bi bi-box-arrow-right" style="color: white; padding-left:0;" id="logout-icon"></i>
                        </a>
                    </div>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Engineers" asp-action="Index">Engineers</a>
                        </li>
            
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vendors" asp-action="Index">Vendors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SalesOrders" asp-action="Index">Sales Order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="EngineeringPackage" asp-action="Index">Engineering Package</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Machine" asp-action="Index">Machine</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PurchaseOrders" asp-action="Index">Purchase Orders</a>
                        </li>

                    </ul>
                </div>
                <!--Logout popup hide
                <div class="popup-conteiner">
                    <div class="popup-content">
                        <i class="fa-solid fa-circle-info close-toast" id="infoIcon"></i>
                        <p>You are about to log out <br />
                            Are you sure you want to do it?</p>
                        <div class="popup-btns">
                            <button id="btnCancel" class="btn-cancel">Cancel</button>
                            <button id="btnLogOut" data-logut-url="@Url.Action("_Login", "Home")" >Log Out</button>
                        </div>
                    </div>
                </div>-->
                <!--Close form popup hide-->
                <div class="popup-close-conteiner">
                    <div class="popup-content">
                        <i class="fa-solid fa-triangle-exclamation close-toast" id="warningIcon"></i>
                        <p>Once you close the form this action cannot be changed <br />
                            Are you sure you want to continue?</p>
                        <div class="popup-btns">
                            <button id="btnCloseCancel" class="btn-cancel">Cancel</button>
                            <button id="btnContinue">Continue</button>
                        </div>
                    </div>
                </div>

            </div>
        </nav>
    </header>
    <ul class="notifications">
        <li class="toast success">
            <div class="column">
                <i class="fa-solid fa-circle-check"></i>
                <span>Success</span>
            </div>
            <i class="fa-solid fa-xmark close-toast"></i>
        </li>
        <li class="toast error">
            <div class="column">
                <i class="fa-solid fa-circle-xmark"></i>
                <span>Error</span>
            </div>
            <i class="fa-solid fa-xmark close-toast"></i>
        </li>
        <li class="toast info">
            <div class="column">
                <i class="fa-solid fa-circle-info"></i>
                <span>Success Applying Filters</span>
            </div>
            <i class="fa-solid fa-xmark close-toast"></i>
        </li>
        <li class="toast warning">
            <div class="column">
                <i class="fa-solid fa-circle-info close-toast"></i>
                <span>warning</span>
            </div>
            <i class="fa-solid fa-xmark"></i>
        </li>
    </ul>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer >
        <div >
            &copy; 2025 - Haver_Boecker_Niagara - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>