@{
    ViewData["Title"] = "_LogIn";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Haver_Boecker_Niagara</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Haver_Boecker_Niagara.styles.css" asp-append-version="true" />
</head>
<body id="body">
    <div class="main-container">
        <h1 class="main-title">Log In</h1>
        <div class="user-name-input">
            <h2>Username</h2>
            <input class="usernameinpt" />
        </div>
        <div class="password-input">
            <h2>Password</h2>
            <input class="passwordinpt" />
        </div>
        <div class="login-btn-container">
            <button class="btn-login">Log In</button>
        </div>
    </div>
</body>
</html>