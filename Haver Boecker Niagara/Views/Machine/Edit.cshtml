@model Haver_Boecker_Niagara.Models.Machine

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Machine</h1>
<hr />
<div class="p-4 shadow-sm card-container">
    <form asp-action="Edit" class="d-flex flex-column w-auto">
        <div class="d-flex flex-row">
            <div class="col-md-6">
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MachineID" />

                    <div class="form-group">
                        <label asp-for="SerialNumber" class="control-label">Serial Number <span class="required-fields">*</span></label>
                        <input asp-for="SerialNumber" class="form-control" required />
                        <span asp-validation-for="SerialNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InternalPONumber" class="control-label">PO# <span class="required-fields">*</span></label>
                        <input asp-for="InternalPONumber" class="form-control" required />
                        <span asp-validation-for="InternalPONumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MachineSize" class="control-label">Size <span class="required-fields">*</span></label>
                        <input asp-for="MachineSize" class="form-control" />
                        <span asp-validation-for="MachineSize" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MachineClass" class="control-label">Class <span class="required-fields">*</span></label>
                        <input asp-for="MachineClass" class="form-control" required />
                        <span asp-validation-for="MachineClass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MachineSizeDesc" class="control-label">Description <span class="required-fields">*</span></label>
                        <input asp-for="MachineSizeDesc" class="form-control" />
                        <span asp-validation-for="MachineSizeDesc" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 ms-2">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="PreOrderNotes" class="control-label"></label>
                        <textarea style="transition: none !important; height: 1em" asp-for="PreOrderNotes" class="form-control form-inline"></textarea>
                        <span asp-validation-for="PreOrderNotes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ScopeNotes" class="control-label"></label>
                        <textarea style="transition: none !important; height: 1em" asp-for="ScopeNotes" class="form-control form-inline"></textarea>
                        <span asp-validation-for="ScopeNotes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BudgetedAssemblyHours" class="control-label"></label>
                        <input asp-for="BudgetedAssemblyHours" class="form-control" />
                        <span asp-validation-for="BudgetedAssemblyHours" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActualAssemblyHours" class="control-label"></label>
                        <input asp-for="ActualAssemblyHours" class="form-control" />
                        <span asp-validation-for="ActualAssemblyHours" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActualReworkHours" class="control-label"></label>
                        <input asp-for="ActualReworkHours" class="form-control" />
                        <span asp-validation-for="ActualReworkHours" class="text-danger"></span>
                    </div>
                    
                </div>
                
            </div>
        </div>
            
        <div class="flex-row d-flex">
            
            <div class="d-flex flex-column col-md-6">
                <div class="d-flex mt-2">
                    <div class="form-group me-2">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Media"/> @Html.DisplayNameFor(model => model.Media)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="SparePartsMedia"/> @Html.DisplayNameFor(model => model.SparePartsMedia)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Base"/> @Html.DisplayNameFor(model => model.Base)
                            </label>
                        </div>

                    </div>
                    <div class="form-group ms-2">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="AirSeal"/> @Html.DisplayNameFor(model => model.AirSeal)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="CoatingOrLining"/> @Html.DisplayNameFor(model => model.CoatingOrLining)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Disassembly"/> @Html.DisplayNameFor(model => model.Disassembly)
                            </label>
                        </div>
                    </div>

                </div>

            </div>
            <div class="d-flex flex-column col-md-6">
                <div class="form-group mt-2">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="NamePlateStatus" /> Name Plate Received?
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end gap-2 mt-4">
            <button type="button" class="btn btn-secondary" id="btnAutofill">Autofill</button>
            <a asp-action="Index" class="btn btn-primary-close">Close</a>
            <button type="reset" class="btn btn-primary-close">Reset</button>
            <button type="submit" value="Edit" class="btn btn-primary btn-edit" id="btnEdit">Save</button>
        </div>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('btnAutofill').addEventListener('click', function() {
            document.getElementById('SerialNumber').value = 'SN-4321';
            document.getElementById('InternalPONumber').value = 'PO-9876';
            document.getElementById('MachineSize').value = 1;
            document.getElementById('MachineClass').value = 'T';
            document.getElementById('MachineSizeDesc').value = 'Size 1';
            document.getElementById('PreOrderNotes').value = 'Updated pre-order notes here';
            document.getElementById('ScopeNotes').value = 'Updated scope notes here';
            document.getElementById('BudgetedAssemblyHours').value = '120';
            document.getElementById('ActualAssemblyHours').value = '110';
            document.getElementById('ActualReworkHours').value = '15';
            document.getElementById('Media').checked = true;
            document.getElementById('SparePartsMedia').checked = true;
            document.getElementById('Base').checked = true;
            document.getElementById('AirSeal').checked = true;
            document.getElementById('CoatingOrLining').checked = true;
            document.getElementById('Disassembly').checked = true;
            document.getElementById('NamePlateStatus').checked = true;
        });
    </script>
}

