@model IEnumerable<Haver_Boecker_Niagara.Models.SalesOrder>

@{
    ViewData["Title"] = "Index";
}

<div class="main-container">
    <h1>Sales Orders</h1>



    <form asp-action="Index" method="get">
        <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
        <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
        <div class="form-horizontal">
            <div class="collapse @ViewData["ShowFilter"]" id="collapseFilter">
                <div class="card card-body">
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label class="control-label">Search by Order Number:</label>
                            @Html.TextBox("SearchOrderNo", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-3">
                            <label class="control-label">Search by Customer ID:</label>
                            @Html.TextBox("SearchCustomerID", null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group mt-2 col-md-2">
                        <input type="submit" name="actionButton" value="Filter"
                               class="btn btn-outline-primary" id="btnFilter" />
                        <a asp-action="Index" class="btn-clear">Clear</a>
                    </div>
                </div>
            </div>
        </div>
        @* search, create btn *@
        <div class="d-flex justify-content-between align-items-center mb-3">
            <button class="search-btn btn @ViewData["Filtering"]" type="button" data-bs-toggle="collapse" id="filterToggle"
                    data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                Search @ViewData["numberFilters"]
            </button>
            <a asp-action="Create" class="btn create-btn">Create New</a>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            Customer Name
                        </th>
                        <th>
                            <button type="submit" name="actionButton" value="OrderNumber" class="text-nowrap fw-bold btn p-0"
                                    formaction="@Url.Action("Index", new { sortField = "OrderNumber", sortDirection = (ViewData["SortField"] as string == "OrderNumber" && ViewData["SortDirection"] as string == "asc") ? "desc" : "asc" })">
                                @Html.DisplayNameFor(model => model.OrderNumber) <span style="font-size: 10pt;">▼▲</span>
                            </button>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Media)
                        </th>
                        <th class="text-nowrap">
                            Spare Parts
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Base)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model.AirSeal)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model.CoatingOrLining)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Disassembly)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Media)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SparePartsMedia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Base)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AirSeal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CoatingOrLining)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Disassembly)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.SalesOrderID" class="ed-det-del-btn">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.SalesOrderID" class="ed-det-del-btn">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.SalesOrderID" class="ed-det-del-btn">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    </form>
</div>
<partial name="_PagingNavBar" />
