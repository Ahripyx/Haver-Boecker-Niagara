@model Haver_Boecker_Niagara.Models.SalesOrder

@{
    ViewData["Title"] = "Edit Sales Order";
}

<h1>Edit Sales Order</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="OrderNumber" class="control-label"></label>
        <input asp-for="OrderNumber" class="form-control" />
        <span asp-validation-for="OrderNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerID" class="control-label"></label>
        <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
        <span asp-validation-for="CustomerID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Media" class="control-label"></label>
        <input asp-for="Media" class="form-control" />
        <span asp-validation-for="Media" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SparePartsMedia" class="control-label"></label>
        <input asp-for="SparePartsMedia" class="form-control" />
        <span asp-validation-for="SparePartsMedia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Base" class="control-label"></label>
        <input asp-for="Base" class="form-control" />
        <span asp-validation-for="Base" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AirSeal" class="control-label"></label>
        <input asp-for="AirSeal" class="form-control" />
        <span asp-validation-for="AirSeal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CoatingOrLining" class="control-label"></label>
        <input asp-for="CoatingOrLining" class="form-control" />
        <span asp-validation-for="CoatingOrLining" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Disassembly" class="control-label"></label>
        <input asp-for="Disassembly" class="form-control" />
        <span asp-validation-for="Disassembly" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PurchaseOrders" class="control-label"></label>
        <select asp-for="PurchaseOrders" class="form-control" asp-items="ViewBag.PurchaseOrders" multiple="multiple"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
