@model Haver_Boecker_Niagara.Models.SalesOrder

@{
    ViewData["Title"] = "Create";
}

<h1>Create Sale Order</h1>
<hr />
<div class="p-4 shadow-sm card-container">
    <form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
           <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Price <span class="required-fields">*</span></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
           </div>
           <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Status" class="control-label">Status <span class="required-fields">*</span></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
           </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CustomerID" class="control-label">Customer Name </label>
                    <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="OrderNumber" class="control-label">Order Number <span class="required-fields">*</span></label>
                    <input asp-for="OrderNumber" class="form-control" />
                    <span asp-validation-for="OrderNumber" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CompletionDate" class="control-label"></label>
                    <input asp-for="CompletionDate" type="date" class="form-control" />
                    <span asp-validation-for="CompletionDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ExtraNotes" class="control-label"></label>
                    <input asp-for="ExtraNotes" class="form-control" />
                    <span asp-validation-for="ExtraNotes" class="text-danger"></span>
                </div>
            </div>
        </div>
            <div class="row">
                <div class="col-md-6">                    
                    <label class="control-label"> Purchase Orders Selected</label> <button type="button" id="btnRight" class="btn btn-danger btn-sm">
                        <strong>-</strong>
                    </button>
                    @Html.ListBox("selectedOptions", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })
                </div>
                <div class="col-md-6">
                    <label class="control-label"> Choose Purchase Orders</label> <button type="button" id="btnLeft" class="btn btn-success btn-sm">
                        <strong>+</strong>
                    </button>
                    @Html.ListBox("availOptions", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })
                </div>
                
            </div>
        <div class="d-flex justify-content-end gap-2 mt-4">
                <input type="submit" value="Create" class="btn btn-primary" id="btnCreate" />
        </div>
        </form>
    
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/multiselect.js"></script>
}
